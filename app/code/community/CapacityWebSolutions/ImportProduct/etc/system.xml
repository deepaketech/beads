<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <cws translate="label" module="importproduct">
            <label>MageBees</label>
            <sort_order>100</sort_order>
        </cws>
    </tabs>
    <sections>
        <importproduct translate="label" module="importproduct">
            <label>Import / Export Products</label>
            <tab>cws</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
                <modules translate="label">
                    <label>Version Information</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>importproduct/adminhtml_system_config_form_fieldset_modules_list</frontend_model>
                    <sort_order>80</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                </modules>
            </groups>
            <groups>
                <importproductseparators_group translate="label" module="importproduct">
                    <label>Import Export Categories Separators</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <separators_parentcategories translate="label">
                            <label>Parent Categories Separator: </label>
                            <comment>Please define Parent categories Separator. Default value (,) comma.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </separators_parentcategories>
                    </fields>
					<fields>
                        <separators_childcategories translate="label">
                            <label>Child Categories Separator: </label>
                            <comment>Please define Child categories Separator. Default value (/) slash.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </separators_childcategories>
                    </fields>
                </importproductseparators_group>
            </groups>
			<groups>
                <support translate="label">
                    <label>Get Support</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>importproduct/adminhtml_system_config_form_fieldset_support_support</frontend_model>
                    <sort_order>120</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                </support>
            </groups>
        </importproduct>
    </sections>
</config>